mixin lineBreak()
    |
    |

mixin wrapBreak()
    +lineBreak
    block
    +lineBreak

mixin btn(action)
    +wrapBreak: button(type="button" data-action=action)&attributes(attributes)
        +wrapBreak: block

mixin popupBtn(popupName)
    +wrapBreak: button(type="button" data-action="popup" data-popup=popupName)&attributes(attributes)
        +wrapBreak: block