{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "npm/*": [ "node_modules/*" ],
      "@/*": [ "src/*" ],
      "features/*": ["src/features/*"],
      "components/*": ["src/components/*"],
      "layout/*": ["src/layout/*"],
      "pages/*": ["src/pages/*"],
      "scripts/*": ["src/scripts/*"],
      "images/*": ["src/static/images/*"],
      "fonts/*": ["src/static/fonts/*"],
      "styles/*": ["src/styles/*"],
      "ui/*": ["src/ui/*"],
    }
  },
  "include": ["src"]
}