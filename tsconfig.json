{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "npm/*": [ "node_modules/*" ],
      "@/*": [ "src/*" ],
      "images/*": [ "src/images/*" ],
      "scripts/*": [ "src/scripts/*" ],
      "layout/*": [ "src/layout/*" ],
      "styles/*": [ "src/styles/*" ],
      "fonts/*": [ "src/fonts/*" ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}